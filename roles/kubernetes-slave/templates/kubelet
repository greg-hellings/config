# The address for the info server to run on
KUBELET_ADDRESS="--address={{ kubernetes_private_ip }}"

# The port for the info server to run on
KUBELET_PORT="--port={{ kubelet_port }}"

# This is really only optional
KUBELET_HOSTNAME="--hostname-override={{ kubelet_hostname }}"

# Location of the API server
KUBELET_API_SERVER="--api-servers={{ kubernetes_api_server }}"

# Additional args, just for fun
KUBELET_ARGS=""
